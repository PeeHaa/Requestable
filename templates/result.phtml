<?php if (isset($error)) { ?>
    <div class="result result-bottom error">
        <p><?php echo $error; ?></p>
    </div>
<?php } else { ?>
    <?php foreach ($requestInfo['headers'] as $header) { ?>
        <div class="result <?php if (!trim($requestInfo['body'])) echo 'result-bottom'; ?>">
            <code><pre><?php echo htmlspecialchars($header, ENT_QUOTES | ENT_SUBSTITUTE); ?></pre></code>
        </div>
    <?php } ?>
    <?php if (trim($requestInfo['body'])) { ?>
        <div class="result result-bottom">
            <?php if (preg_match('#\nContent-Type: application/json\b#', $requestInfo['headers'][0]) === 1) { ?>
                <img src="/style/json.png" class="json" title="Prettify JSON">
            <?php } ?>
            <code><pre><?php echo htmlspecialchars($requestInfo['body'], ENT_QUOTES | ENT_SUBSTITUTE); ?></pre></code>
        </div
    <?php } ?>
<?php } ?>

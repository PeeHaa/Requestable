$byteFormatter = new \Requestable\Format\Byte;
?>
<div class="main-content">
    <h1>Recent requests</h1>
    <h2>Showing 100 latest requests sorted by timestamp descending</h2>
    <table>
        <thead>
            <tr>
                <th class="id">#</th>
                <th>URI</th>
                <th class="right version">Version</th>
